<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Medium.ttf</item>
    </style>
    <!--Custom bold text appearance-->
    <style name="CustomTextAppearance.Bold" parent="CustomTextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Dosis-Bold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Custom light text appearance-->
    <style name="CustomTextAppearance.Light" parent="CustomTextAppearance">
        <item name="fontPath">fonts/Dosis-Light.ttf</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector_primary_color</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:text">@string/accept_terms_and_condition</item>
    </style>

    <style name="btnPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>


</resources>
